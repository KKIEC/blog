%div.container
  %div.row.justify-content-center
    %div.col-sm-10
      = render 'shared/errors', obj: @user
      = form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|
        %div.form-group.row
          = f.label :username, 'Username:', class: "col-sm-2 col-form-label text-light"
          %div.col-sm-10
            = f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"

        %div.form-group.row
          = f.label :email, 'Email:', class: "col-sm-2 col-form-label text-light"
          %div.col-sm-10
            = f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"

        %div.form-group.row.mb-4
          = f.label :password, 'Password:', class: "col-sm-2 col-form-label text-light"
          %div.col-sm-10
            = f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password"

        %div.form-group.row.justify-content-center
          = f.submit(@user.new_record? ? 'Sign up' : 'Update account', class: "btn btn-outline-light")

    %div.mb-3
      = link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info"
