%div.container
  %div.row.justify-content-center
    %div.col-sm-10
      = render 'shared/errors', obj: @article
      = form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|
        %div.form-group.row
          = f.label :title, 'Title:', class: "col-sm-2 col-form-label text-light"
          %div.col-sm-10
            = f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"

        %div.form-group.row
          = f.label :description, 'Description:', class: "col-sm-2 col-form-label text-light"
          %div.col-sm-10
            = f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article"

        %div.form-group.row.mb-4
          = f.label :category, 'Category:', class: "col-sm-2 col-form-label text-light"
          %div.col-sm-10
            = f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: 'Make your selection from the list:' },
            { multiple: true, size: 3, class: "custom-select shadow rounded" })

        %div.form-group.row.justify-content-center
          = f.submit class: "btn btn-outline-light"

    %div.mb-3
      = link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info"
