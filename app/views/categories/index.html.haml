%h2.text-center.mt-4
  Categories:

= will_paginate(@categories,
  class: 'container flickr_pagination text-center',
  inner_window: 1,
  outer_window: 0,
  previous_label: '<',
  next_label: '>')

%div.container
  - @categories.each do |category|
    %div.row.justify-content-center
      %div.col-sm-4.mt-4
        %div.card.text-center.shadow.mb-5.bg-white.rounded

          %div.card-body
            %h5.card-title
              = link_to category.name, category_path(category), class: "text-success"
            %p.card-text
              = pluralize(category.articles.count, 'article')

          %div.card-footer.text-muted
            %small
              Created
              = time_ago_in_words(category.created_at)
              ago, edited
              = time_ago_in_words(category.updated_at)
              ago.

= will_paginate(@categories,
  class: 'container flickr_pagination text-center mb-4',
  inner_window: 1,
  outer_window: 0,
  previous_label: '<',
  next_label: '>')
